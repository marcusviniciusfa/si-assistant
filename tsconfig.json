{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "allowJs": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@controllers/*": [
        "controllers/*"
      ],
      "@fulfillment/*": [
        "fulfillment/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@index": [
        "index"
      ],
      "@interfaces": [
        "interfaces"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ]
}